
<style>
  .btn-custom {
    margin-top: 14px;
    background-color: #ffd8c8;
  }
</style>

<head>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body>
  <div id="top-page">

    <div id="wrapper">
      <%= render partial: 'layouts/sidebar' %>

      <div class="container my-5">
        <% if @user.requiring_user? %>
          <h1>Edit Requiring User</h1>
        <% end %>
        <% if @user.executive? %>
          <h1>Edit Executive</h1>
        <% end %>
        <% if @user.supervisor? %>
          <h1>Edit Supervisor</h1>
        <% end %>
        <% if @user.administrator? %>
          <h1>Edit Administrator</h1>
        <% end %>
        <div class="card">
          <div class="card-body">
            <form class="row g-3" action="<%= user_path(@user) %>" method="post">
              <%= form_with(model: @user, local: true) do |form| %>
                <div class="col-md-12">
                  <label for="inputName" class="form-label">Name</label>
                  <%= form.text_field :name, class: 'form-control', id: 'inputName' %>
                </div>
                <div class="col-md-12">
                  <label for="inputLastName" class="form-label">Last Name</label>
                  <%= form.text_field :last_name, class: 'form-control', id: 'inputLastName' %>
                </div>
                <div class="col-md-12">
                  <label for="inputPhone" class="form-label">Phone</label>
                  <%= form.text_field :telephone, class: 'form-control', id: 'inputPhone' %>
                </div>
                <div class="col-md-12">
                  <label for="inputEmail" class="form-label">Email</label>
                  <%= form.email_field :email, class: 'form-control', id: 'inputEmail', disabled: true %>
                </div>
                <hr style="background-color: #d0d0d0;">
                <div class="actions">
                  <% if @user.requiring_user? %>
                    <%= form.submit 'Update Requiring User', class: 'btn btn-primary' %>
                  <% end %>
                  <% if @user.executive? %>
                    <%= form.submit 'Update Executive', class: 'btn btn-primary' %>
                  <% end %>
                  <% if @user.supervisor? %>
                    <%= form.submit 'Update Supervisor', class: 'btn btn-primary' %>
                  <% end %>
                  <% if @user.administrator? %>
                    <%= form.submit 'Update Administrator', class: 'btn btn-primary' %>
                  <% end %>
                </div>
                <div>
                  <button class="btn btn-secondary" style = "margin-bottom: 10px;" onclick="history.back()" type="button">Back</button>
                </div>
              <% end %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
